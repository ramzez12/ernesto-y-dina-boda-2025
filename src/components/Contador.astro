<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  if (typeof window !== 'undefined') {
    document.addEventListener("DOMContentLoaded", () => {
      console.log("‚è∞ Iniciando contador elegante...");

      // üéØ FECHA DEL EVENTO: 25 de Abril 2026
      const fechaEvento = new Date("2025-12-20T18:00:00").getTime();

      // ‚è∞ FUNCI√ìN DEL CONTADOR
      function actualizarContador() {
        const ahora = new Date().getTime();
        const diferencia = fechaEvento - ahora;

        if (diferencia > 0) {
          const dias = Math.floor(diferencia / (1000 * 60 * 60 * 24));
          const horas = Math.floor((diferencia % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
          const minutos = Math.floor((diferencia % (1000 * 60 * 60)) / (1000 * 60));
          const segundos = Math.floor((diferencia % (1000 * 60)) / 1000);

          const diasEl = document.getElementById("dias");
          const horasEl = document.getElementById("horas");
          const minutosEl = document.getElementById("minutos");
          const segundosEl = document.getElementById("segundos");

          if (diasEl) diasEl.textContent = String(dias).padStart(2, "0");
          if (horasEl) horasEl.textContent = String(horas).padStart(2, "0");
          if (minutosEl) minutosEl.textContent = String(minutos).padStart(2, "0");
          if (segundosEl) segundosEl.textContent = String(segundos).padStart(2, "0");
        } else {
          const diasEl = document.getElementById("dias");
          const horasEl = document.getElementById("horas");
          const minutosEl = document.getElementById("minutos");
          const segundosEl = document.getElementById("segundos");

          if (diasEl) diasEl.textContent = "00";
          if (horasEl) horasEl.textContent = "00";
          if (minutosEl) minutosEl.textContent = "00";
          if (segundosEl) segundosEl.textContent = "00";
        }
      }

      actualizarContador();
      setInterval(actualizarContador, 1000);

      // üéØ ESTADO INICIAL
      gsap.set("#texto-superior", { opacity: 0, y: -30 });
      gsap.set("#hoja-lateral-izq", { opacity: 0, x: -60 });
      gsap.set("#hoja-lateral-der", { opacity: 0, x: 60 });
      gsap.set("#card-contador", { opacity: 0, scale: 0.95, y: 30 });

      // ‚ú® ANIMACIONES CON SCROLLTRIGGER
      ScrollTrigger.create({
        trigger: "#card-contador",
        start: "top 85%",
        end: "top 20%",
        onEnter: () => {
          const tl = gsap.timeline();

          // Texto superior aparece primero
          tl.to("#texto-superior", {
            opacity: 1,
            y: 0,
            duration: 0.8,
            ease: "power2.out",
          })

          // Card contador aparece con escala
          .to("#card-contador", {
            opacity: 1,
            scale: 1,
            y: 0,
            duration: 1,
            ease: "back.out(1.3)",
          }, "-=0.4")

          // Flores laterales se deslizan
          .to("#hoja-lateral-izq, #hoja-lateral-der", {
            opacity: 1,
            x: 0,
            duration: 1.2,
            ease: "power3.out",
          }, "-=0.8");
        },
        onLeaveBack: () => {
          gsap.set("#texto-superior", { opacity: 0, y: -30 });
          gsap.set("#hoja-lateral-izq", { opacity: 0, x: -60 });
          gsap.set("#hoja-lateral-der", { opacity: 0, x: 60 });
          gsap.set("#card-contador", { opacity: 0, scale: 0.95, y: 30 });
        },
      });

      // üçÉ ANIMACIONES CONTINUAS ELEGANTES
      
      // Movimiento suave de flores
    //  gsap.to("#hoja-lateral-izq", {
    //     y: -8,
    //     rotation: -5,
    //     duration: 3,
    //     ease: "sine.inOut",
    //     yoyo: true,
    //     repeat: -1,
    //     delay: 1,
    //   }); 

      // gsap.to("#hoja-lateral-der", {
      //   y: -8,
      //   rotation: 5,
      //   duration: 3,
      //   ease: "sine.inOut",
      //   yoyo: true,
      //   repeat: -1,
      //   delay: 1,
      // });

      // Separadores pulsando
      gsap.to(".separador-elegante", {
        scale: 1.3,
        opacity: 0.6,
        duration: 2,
        ease: "sine.inOut",
        yoyo: true,
        repeat: -1,
        stagger: 0.2,
      });

      // Resplandor sutil en n√∫meros
      gsap.to(".numero-elegante", {
        textShadow: "0 0 20px rgba(201, 169, 97, 0.5), 0 4px 8px rgba(201, 169, 97, 0.3)",
        duration: 3,
        ease: "sine.inOut",
        yoyo: true,
        repeat: -1,
        stagger: 0.4,
      });

      console.log("‚è∞‚ú® ¬°Contador elegante activado!");
    });
  }
</script>

