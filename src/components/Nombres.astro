<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  if (typeof window !== 'undefined') {
    document.addEventListener("DOMContentLoaded", () => {
      console.log("üë®‚Äçüë©‚Äçüëß‚Äçüë¶ Iniciando animaciones de padres y padrinos...");

      // üéØ ESTADO INICIAL - Todo oculto
      gsap.set("#texto-bendicion", { opacity: 0, y: 30, scale: 0.95 });
      gsap.set("#seccion-padres-novio", { opacity: 0, y: 30 });
      gsap.set("#seccion-padres-novia", { opacity: 0, y: 30 });
      gsap.set("#seccion-padrinos-anillos", { opacity: 0, y: 30 });
      gsap.set("#seccion-padrinos-civil", { opacity: 0, y: 30 });
      gsap.set("#adorno-izq", { opacity: 0, x: -30 });
      gsap.set("#adorno-der", { opacity: 0, x: 30 });

      // üìç SCROLLTRIGGER PARA ACTIVAR LA ANIMACI√ìN
      ScrollTrigger.create({
        trigger: "#texto-bendicion",
        start: "top 90%",
        end: "top 20%",
        
        onEnter: () => {
          console.log("‚ú® Padres y padrinos apareciendo simult√°neamente...");
          animarSimultaneo();
        },
        
        onLeaveBack: () => {
          console.log("üëã Ocultando secci√≥n de padres y padrinos...");
          ocultarSimultaneo();
        },
      });

      // üé¨ ANIMACI√ìN SIMULT√ÅNEA - TODO AL MISMO TIEMPO
      function animarSimultaneo() {
        // Animaci√≥n elegante del texto de bendici√≥n (fade + scale suave)
        gsap.to("#texto-bendicion", {
          opacity: 1,
          y: 0,
          scale: 1,
          duration: 1.2,
          ease: "power3.out",
        });
        
        const tl = gsap.timeline({ delay: 0.6 }); // Delay para que el texto aparezca primero

        // TODO aparece al mismo tiempo con la misma duraci√≥n
        tl.to("#adorno-izq, #adorno-der, #seccion-padres-novio, #seccion-padres-novia, #seccion-padrinos-anillos, #seccion-padrinos-civil", {
          opacity: 1,
          duration: 1,
          ease: "power2.out",
        })
        // Movimientos individuales (simult√°neos)
        .to("#adorno-izq", {
          x: 0,
          duration: 1,
          ease: "power2.out",
        }, "<")
        .to("#adorno-der", {
          x: 0,
          duration: 1,
          ease: "power2.out",
        }, "<")
        .to("#seccion-padres-novio, #seccion-padres-novia, #seccion-padrinos-anillos, #seccion-padrinos-civil", {
          y: 0,
          duration: 1,
          ease: "power2.out",
        }, "<");
      }

      // üîô ANIMACI√ìN DE SALIDA SIMULT√ÅNEA
      function ocultarSimultaneo() {
        const tl = gsap.timeline();

        // TODO desaparece al mismo tiempo
        tl.to("#texto-bendicion, #adorno-izq, #adorno-der, #seccion-padres-novio, #seccion-padres-novia, #seccion-padrinos-anillos, #seccion-padrinos-civil", {
          opacity: 0,
          duration: 0.5,
          ease: "power2.in",
        })
        // Movimientos individuales (simult√°neos)
        .to("#adorno-izq", {
          x: -30,
          duration: 0.5,
          ease: "power2.in",
        }, "<")
        .to("#adorno-der", {
          x: 30,
          duration: 0.5,
          ease: "power2.in",
        }, "<")
        .to("#texto-bendicion, #seccion-padres-novio, #seccion-padres-novia, #seccion-padrinos-anillos, #seccion-padrinos-civil", {
          y: 30,
          duration: 0.5,
          ease: "power2.in",
        }, "<")
        .to("#texto-bendicion", {
          scale: 0.95,
          duration: 0.5,
          ease: "power2.in",
        }, "<");
      }
    });
  }
</script>

