<!-- üé¨ ANIMACIONES CON GSAP                                     -->
<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<script>
    import { gsap } from "gsap";

    document.addEventListener("DOMContentLoaded", () => {
        console.log("üéä Iniciando animaciones de boda - TODAS AL MISMO TIEMPO...");

        // ‚ïê‚ïê‚ïê FLORES SUPERIORES ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#flores-sup-izq",
            { opacity: 0, x: -100 },
            { opacity: 1, x: 0, duration: 0.8, ease: "power2.out", delay: 0 }
        );

        gsap.fromTo(
            "#flores-sup-der",
            { opacity: 0, x: 100 },
            { opacity: 1, x: 0, duration: 0.8, ease: "power2.out", delay: 0 }
        );

        // ‚ïê‚ïê‚ïê T√çTULO "NOS CASAMOS" ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#titulo",
            { opacity: 0, y: -40 },
            { opacity: 1, y: 0, duration: 0.8, ease: "power2.out", delay: 0.1 }
        );

        // ‚ïê‚ïê‚ïê ANILLOS ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#anillos",
            { opacity: 0, scale: 0.5 },
            { opacity: 1, scale: 1, duration: 0.8, ease: "back.out(1.4)", delay: 0.2 }
        );

        // Rotaci√≥n suave continua de los anillos
        gsap.to("#anillos", {
            rotation: 5,
            duration: 3,
            ease: "sine.inOut",
            yoyo: true,
            repeat: -1,
            delay: 1
        });

        // ‚ïê‚ïê‚ïê FUNCI√ìN PARA ANIMAR NOMBRES LETRA POR LETRA ‚ïê‚ïê‚ïê
        function animarNombre(elementId, texto, delay = 0) {
            const contenedor = document.getElementById(elementId);
            if (!contenedor) return;

            contenedor.innerHTML = texto
                .split("")
                .map(
                    (letra, index) =>
                        `<span class="letra-cascada" style="
                            --i: ${index};
                            opacity: 0; 
                            display: inline-block; 
                            transform: translateY(20px) scale(0.8);
                            filter: blur(2px);
                        ">${letra === " " ? "&nbsp;" : letra}</span>`
                )
                .join("");

            gsap.to(`#${elementId} .letra-cascada`, {
                opacity: 1,
                y: 0,
                scale: 1,
                filter: "blur(0px)",
                duration: 0.6,
                ease: "power2.out",
                stagger: { each: 0.04, from: "start" },
                delay: delay
            });
        }

        // ‚ïê‚ïê‚ïê NOMBRE DEL NOVIO ‚ïê‚ïê‚ïê
        animarNombre("nombre-novio", "Ernesto", 0.3);

        // ‚ïê‚ïê‚ïê S√çMBOLO & ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#ampersand",
            { opacity: 0, scale: 0.7 },
            { opacity: 1, scale: 1, duration: 0.6, ease: "back.out(1.5)", delay: 0.5 }
        );

        // ‚ïê‚ïê‚ïê NOMBRE DE LA NOVIA ‚ïê‚ïê‚ïê
        animarNombre("nombre-novia", "Dina", 0.6);

        // ‚ïê‚ïê‚ïê FLORES DORADAS ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#flores-doradas-izq",
            { opacity: 0, x: -100 },
            { opacity: 1, x: 0, duration: 0.8, ease: "power2.out", delay: 0.4 }
        );

        gsap.fromTo(
            "#flores-doradas-der",
            { opacity: 0, x: 100 },
            { opacity: 1, x: 0, duration: 0.8, ease: "power2.out", delay: 0.4 }
        );

        // ‚ïê‚ïê‚ïê BRILLOS LATERALES ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#flores-izq",
            { opacity: 0, x: -100, scale: 0.9 },
            { opacity: 1, x: 0, scale: 1, duration: 0.8, ease: "power2.out", delay: 0.7 }
        );

        gsap.fromTo(
            "#flores-der",
            { opacity: 0, x: 100, scale: 0.9 },
            { opacity: 1, x: 0, scale: 1, duration: 0.8, ease: "power2.out", delay: 0.7 }
        );

        // ‚ïê‚ïê‚ïê SEPARADOR (misma animaci√≥n que anillos) ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#separador-inferior",
            { opacity: 0, scale: 0.5 },
            { opacity: 1, scale: 1, duration: 0.8, ease: "back.out(1.4)", delay: 0.8 }
        );

        // ‚ïê‚ïê‚ïê EFECTO PULSANTE EN BRILLOS ‚ïê‚ïê‚ïê
        gsap.to("#flores-izq", {
            opacity: 0.8,
            scale: 1.05,
            duration: 2,
            ease: "sine.inOut",
            yoyo: true,
            repeat: -1,
            delay: 2
        });

        gsap.to("#flores-der", {
            opacity: 0.8,
            scale: 1.05,
            duration: 2,
            ease: "sine.inOut",
            yoyo: true,
            repeat: -1,
            delay: 2
        });

        console.log("‚ú® Animaciones de boda completadas en ~1.5 segundos!");
    });
</script>

