---
// Itinerario.astro
---

<section class="py-8 lg:py-20 px-4 relative overflow-hidden">
  <!-- Fondo sutil con textura -->
  <div class="absolute inset-0 bg-gradient-to-b from-[#fffaf5]/40 via-[#fff9f0]/20 to-[#fffaf5]/40 z-0"></div>

  <div class="max-w-5xl mx-auto relative z-10">

    <div class="max-w-3xl mx-auto relative">

      <!-- üçÉ HOJA IZQUIERDA - PEGADA AL BORDE Y CENTRADA VERTICALMENTE -->
      <div class="absolute left-0 top-1/2 -translate-y-1/2 w-12 pointer-events-none -ml-6 sm:-ml-7 md:-ml-8 z-20" id="hoja-itinerario-izq">
        <img
          src="/imagenes/Hojas.webp"
          alt="Hoja izquierda"
          class="w-full h-auto object-contain transform -scale-x-100"
        />
      </div>

      <!-- üçÉ HOJA DERECHA - PEGADA AL BORDE Y CENTRADA VERTICALMENTE -->
      <div class="absolute right-0 top-1/2 -translate-y-1/2 w-12 pointer-events-none -mr-6 sm:-mr-7 md:-mr-8 z-20" id="hoja-itinerario-der">
        <img
          src="/imagenes/Hojas.webp"
          alt="Hoja derecha"
          class="w-full h-auto object-contain"
        />
      </div>

      <!-- üå∏ FLORES DECORATIVAS ARRIBA -->
      <div class="flex justify-center mb-4" id="flores-itinerario">
        <img
          src="/imagenes/Separadores.webp"
          alt="Flores decorativas"
          class="w-32 md:w-40 lg:w-48 h-auto opacity-90"
        />
      </div>

      <!-- T√çTULO -->
      <div class="text-center mb-8" id="titulo-itinerario">
        <h2 class="font-charm text-2xl md:text-3xl lg:text-3xl text-[#C9A961] font-bold mb-4">
          ITINERARIO
        </h2>
        <!-- L√≠nea decorativa -->
        <div class="flex items-center justify-center gap-3">
          <div class="w-16 h-[2px] bg-gradient-to-r from-transparent to-[#C9A961]"></div>
          <div class="w-2 h-2 rounded-full bg-[#C9A961]"></div>
          <div class="w-16 h-[2px] bg-gradient-to-l from-transparent to-[#C9A961]"></div>
        </div>
      </div>

      <!-- TIMELINE CONTAINER -->
      <div class="relative px-4 md:px-8">
        
        <!-- L√≠nea vertical CENTRAL con degradado mejorado -->
        <div class="absolute left-1/2 -translate-x-1/2 top-0 bottom-0 w-[3px] bg-gradient-to-b from-[#C9A961] via-[#d4b16e] to-[#C9A961] rounded-full shadow-sm" id="linea-central"></div>

        <!-- EVENTOS DEL ITINERARIO -->
        <div class="space-y-1" id="eventos-container">

          <!-- ‚ù§Ô∏è CORAZ√ìN 1 -->
          <div class="flex justify-center py-2">
            <div class="w-8 h-8 rounded-full bg-gradient-to-br from-[#C9A961] to-[#a88a4d] flex items-center justify-center relative z-10 corazon-item shadow-md">
              <svg class="w-4 h-4 text-white" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
              </svg>
            </div>
          </div>

          <!-- EVENTO 1: Ceremonia Religiosa (IMAGEN IZQ - TEXTO DER) -->
          <div class="evento-item grid grid-cols-2 gap-6 md:gap-10 py-2">
            <!-- IMAGEN IZQUIERDA -->
            <div class="flex flex-col items-center justify-center px-3 md:px-6 imagen-izq">
              <div class="w-16 h-16 md:w-20 md:h-20 lg:w-24 lg:h-24 transform transition-transform duration-300 hover:scale-110">
                <img src="/imagenes/IconoDireccion.webp" alt="Ceremonia" class="w-full h-full object-contain drop-shadow-md" />
              </div>
            </div>
            <!-- TEXTO DERECHA -->
            <div class="flex flex-col items-center justify-center px-3 md:px-6 text-center texto-der">
              <p class="font-charm text-xl md:text-base lg:text-lg text-[#C9A961] font-bold leading-tight">Celebraci√≥n del matrimonio (Sal√≥n)</p>
              <p class="font-charm text-xl md:text-sm text-[#626a54] mt-1">12:00 Hrs</p>
            </div>
          </div>

          <!-- ‚ù§Ô∏è CORAZ√ìN 2 -->
          <div class="flex justify-center py-2">
            <div class="w-8 h-8 rounded-full bg-gradient-to-br from-[#C9A961] to-[#a88a4d] flex items-center justify-center relative z-10 corazon-item shadow-md">
              <svg class="w-4 h-4 text-white" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
              </svg>
            </div>
          </div>

          <!-- EVENTO 2: Boda Civil y Recepci√≥n (TEXTO IZQ - IMAGEN DER) -->
          <div class="evento-item grid grid-cols-2 gap-6 md:gap-10 py-2">
            <!-- TEXTO IZQUIERDA -->
            <div class="flex flex-col items-center justify-center px-3 md:px-6 text-center texto-izq">
              <p class="font-charm text-xl md:text-base lg:text-lg text-[#C9A961] font-bold leading-tight">Sesi√≥n de Fotos</p>
              <p class="font-charm text-xl md:text-sm text-[#626a54] mt-1">13:30 Hrs</p>
            </div>
            <!-- IMAGEN DERECHA -->
            <div class="flex flex-col items-center justify-center px-3 md:px-6 imagen-der">
              <div class="w-16 h-16 md:w-20 md:h-20 lg:w-24 lg:h-24 transform transition-transform duration-300 hover:scale-110">
                <img src="/imagenes/Camara.png" alt="Boda Civil" class="w-full h-full object-contain drop-shadow-md" />
              </div>
            </div>
          </div>

          <!-- ‚ù§Ô∏è CORAZ√ìN 3 -->
          <div class="flex justify-center py-2">
            <div class="w-8 h-8 rounded-full bg-gradient-to-br from-[#C9A961] to-[#a88a4d] flex items-center justify-center relative z-10 corazon-item shadow-md">
              <svg class="w-4 h-4 text-white" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
              </svg>
            </div>
          </div>

          <!-- EVENTO 3: Entrada y Vals de los Novios (IMAGEN IZQ - TEXTO DER) -->
          <div class="evento-item grid grid-cols-2 gap-6 md:gap-10 py-2">
            <!-- IMAGEN IZQUIERDA -->
            <div class="flex flex-col items-center justify-center px-3 md:px-6 imagen-izq">
              <div class="w-16 h-16 md:w-20 md:h-20 lg:w-24 lg:h-24 transform transition-transform duration-300 hover:scale-110">
                <img src="/imagenes/IconoCena.webp" alt="cena" class="w-full h-full object-contain drop-shadow-md" />
              </div>
            </div>
            <!-- TEXTO DERECHA -->
            <div class="flex flex-col items-center justify-center px-3 md:px-6 text-center texto-der">
              <p class="font-charm text-xl md:text-base lg:text-lg text-[#C9A961] font-bold leading-tight">Brindis y almuerzo</p>
              <p class="font-charm text-xl md:text-sm text-[#626a54] mt-1">14:00 Hrs</p>
            </div>
          </div>

          <!-- ‚ù§Ô∏è CORAZ√ìN 4 -->
          <div class="flex justify-center py-2">
            <div class="w-8 h-8 rounded-full bg-gradient-to-br from-[#C9A961] to-[#a88a4d] flex items-center justify-center relative z-10 corazon-item shadow-md">
              <svg class="w-4 h-4 text-white" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
              </svg>
            </div>
          </div>

          <!-- EVENTO 4: Cena (TEXTO IZQ - IMAGEN DER) -->
          <div class="evento-item grid grid-cols-2 gap-6 md:gap-10 py-2">
            <!-- TEXTO IZQUIERDA -->
            <div class="flex flex-col items-center justify-center px-3 md:px-6 text-center texto-izq">
              <p class="font-charm text-xl md:text-base lg:text-lg text-[#C9A961] font-bold leading-tight">Baile de los Novios y Fiesta</p>
              <p class="font-charm text-xl md:text-sm text-[#626a54] mt-1">15:00 Hrs</p>
            </div>
            <!-- IMAGEN DERECHA -->
            <div class="flex flex-col items-center justify-center px-3 md:px-6 imagen-der">
              <div class="w-16 h-16 md:w-20 md:h-20 lg:w-24 lg:h-24 transform transition-transform duration-300 hover:scale-110">
                <img src="/imagenes/IconoVals.webp" alt="Cena" class="w-full h-full object-contain drop-shadow-md" />
              </div>
            </div>
          </div>

          <!-- ‚ù§Ô∏è CORAZ√ìN 5 -->
          <div class="flex justify-center py-2">
            <div class="w-8 h-8 rounded-full bg-gradient-to-br from-[#C9A961] to-[#a88a4d] flex items-center justify-center relative z-10 corazon-item shadow-md">
              <svg class="w-4 h-4 text-white" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
              </svg>
            </div>
          </div>

          <!-- EVENTO 5: Lanzamiento del Bouquet (IMAGEN IZQ - TEXTO DER) -->
          <div class="evento-item grid grid-cols-2 gap-6 md:gap-10 py-2">
            <!-- IMAGEN IZQUIERDA -->
            <div class="flex flex-col items-center justify-center px-3 md:px-6 imagen-izq">
              <div class="w-16 h-16 md:w-20 md:h-20 lg:w-24 lg:h-24 transform transition-transform duration-300 hover:scale-110">
                <img src="/imagenes/IconoTorta.png" alt="Bouquet" class="w-full h-full object-contain drop-shadow-md" />
              </div>
            </div>
            <!-- TEXTO DERECHA -->
            <div class="flex flex-col items-center justify-center px-3 md:px-6 text-center texto-der">
              <p class="font-charm text-xl md:text-base lg:text-lg text-[#C9A961] font-bold leading-tight">Torta y Ramo</p>
              <p class="font-charm text-xl md:text-sm text-[#626a54] mt-1">18:00 Hrs</p>
            </div>
          </div>

          <!-- ‚ù§Ô∏è CORAZ√ìN FINAL -->
          <div class="flex justify-center py-2">
            <div class="w-8 h-8 rounded-full bg-gradient-to-br from-[#C9A961] to-[#a88a4d] flex items-center justify-center relative z-10 corazon-item shadow-md">
              <svg class="w-4 h-4 text-white" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
              </svg>
            </div>
          </div>

           <!-- EVENTO 4: Cena (TEXTO IZQ - IMAGEN DER) -->
          <div class="evento-item grid grid-cols-2 gap-6 md:gap-10 py-2">
            <!-- TEXTO IZQUIERDA -->
            <div class="flex flex-col items-center justify-center px-3 md:px-6 text-center texto-izq">
              <p class="font-charm text-xl md:text-base lg:text-lg text-[#C9A961] font-bold leading-tight">Despedida</p>
              <p class="font-charm text-xl md:text-sm text-[#626a54] mt-1">21:00 Hrs</p>
            </div>
            <!-- IMAGEN DERECHA -->
            <div class="flex flex-col items-center justify-center px-3 md:px-6 imagen-der">
              <div class="w-16 h-16 md:w-20 md:h-20 lg:w-24 lg:h-24 transform transition-transform duration-300 hover:scale-110">
                <img src="/imagenes/Despedida.png" alt="Cena" class="w-full h-full object-contain drop-shadow-md" />
              </div>
            </div>
          </div>

          <!-- ‚ù§Ô∏è CORAZ√ìN 5 -->
          <div class="flex justify-center py-2">
            <div class="w-8 h-8 rounded-full bg-gradient-to-br from-[#C9A961] to-[#a88a4d] flex items-center justify-center relative z-10 corazon-item shadow-md">
              <svg class="w-4 h-4 text-white" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
              </svg>
            </div>
          </div>


        </div>

      </div>

    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  if (typeof window !== 'undefined') {
    document.addEventListener("DOMContentLoaded", () => {
      console.log("üìÖ Iniciando itinerario con animaci√≥n simult√°nea perfecta...");

      // üéØ ESTADO INICIAL
      gsap.set("#flores-itinerario", { opacity: 0, y: -30, scale: 0.8 });
      gsap.set("#titulo-itinerario", { opacity: 0, y: -20 });
      gsap.set("#linea-central", { opacity: 0, scaleY: 0, transformOrigin: "top" });
      gsap.set(".corazon-item", { opacity: 0, scale: 0 });
      
      // Hojas en los bordes
      gsap.set("#hoja-itinerario-izq", { opacity: 0, x: -30 });
      gsap.set("#hoja-itinerario-der", { opacity: 0, x: 30 });
      
      // Im√°genes desde su lado
      gsap.set(".imagen-izq", { opacity: 0, x: -150, scale: 0.7 });
      gsap.set(".imagen-der", { opacity: 0, x: 150, scale: 0.7 });
      
      // Textos con deslizamiento elegante
      gsap.set(".texto-izq", { opacity: 0, x: -100 });
      gsap.set(".texto-der", { opacity: 0, x: 100 });

      // ‚ú® ANIMACI√ìN COMPLETAMENTE SIMULT√ÅNEA
      ScrollTrigger.create({
        trigger: "#flores-itinerario",
        start: "top 85%",
        end: "top 20%",
        onEnter: () => {
          const tl = gsap.timeline();

          // üå∏ TODO APARECE EXACTAMENTE AL MISMO TIEMPO usando "<"
          tl.to("#flores-itinerario", {
            opacity: 1,
            y: 0,
            scale: 1,
            duration: 1.2,
            ease: "back.out(1.5)",
          })
          .to("#titulo-itinerario", {
            opacity: 1,
            y: 0,
            duration: 1,
            ease: "power2.out",
          }, "<")
          .to("#linea-central", {
            opacity: 1,
            scaleY: 1,
            duration: 1.5,
            ease: "power2.inOut",
          }, "<")
          .to(".corazon-item", {
            opacity: 1,
            scale: 1,
            duration: 1.2,
            ease: "back.out(1.5)",
          }, "<")
          // üçÉ HOJAS EN LOS BORDES - AL MISMO TIEMPO
          .to("#hoja-itinerario-izq", {
            opacity: 1,
            x: 0,
            duration: 1.2,
            ease: "power2.out",
          }, "<")
          .to("#hoja-itinerario-der", {
            opacity: 1,
            x: 0,
            duration: 1.2,
            ease: "power2.out",
          }, "<")
          // üñºÔ∏è TODAS LAS IM√ÅGENES IZQUIERDA - AL MISMO TIEMPO
          .to(".imagen-izq", {
            opacity: 1,
            x: 0,
            scale: 1,
            duration: 1.3,
            ease: "power3.out",
          }, "<")
          // üñºÔ∏è TODAS LAS IM√ÅGENES DERECHA - AL MISMO TIEMPO
          .to(".imagen-der", {
            opacity: 1,
            x: 0,
            scale: 1,
            duration: 1.3,
            ease: "power3.out",
          }, "<")
          // ‚ú® TODOS LOS TEXTOS IZQUIERDA - AL MISMO TIEMPO
          .to(".texto-izq", {
            opacity: 1,
            x: 0,
            duration: 1.2,
            ease: "power2.out",
          }, "<")
          // ‚ú® TODOS LOS TEXTOS DERECHA - AL MISMO TIEMPO
          .to(".texto-der", {
            opacity: 1,
            x: 0,
            duration: 1.2,
            ease: "power2.out",
          }, "<");

          // üí´ Efecto de pulso sutil en corazones (despu√©s de aparecer)
          gsap.to(".corazon-item", {
            scale: 1.08,
            duration: 2,
            ease: "sine.inOut",
            yoyo: true,
            repeat: -1,
            delay: 1.5,
          });

          // üçÉ Movimiento suave de las hojas (despu√©s de aparecer)
          gsap.to("#hoja-itinerario-izq", {
            y: -5,
            rotation: -2,
            duration: 2.5,
            ease: "sine.inOut",
            yoyo: true,
            repeat: -1,
            delay: 1.5,
          });

          gsap.to("#hoja-itinerario-der", {
            y: -5,
            rotation: 2,
            duration: 2.5,
            ease: "sine.inOut",
            yoyo: true,
            repeat: -1,
            delay: 1.7,
          });
        },
        onLeaveBack: () => {
          // Salida simult√°nea
          const tl = gsap.timeline();
          
          tl.to("#flores-itinerario, #titulo-itinerario, #linea-central, .corazon-item, #hoja-itinerario-izq, #hoja-itinerario-der, .imagen-izq, .imagen-der, .texto-izq, .texto-der", {
            opacity: 0,
            duration: 0.6,
            ease: "power2.in",
          })
          .to("#flores-itinerario", {
            y: -30,
            scale: 0.8,
            duration: 0.6,
          }, "<")
          .to("#titulo-itinerario", {
            y: -20,
            duration: 0.6,
          }, "<")
          .to("#linea-central", {
            scaleY: 0,
            duration: 0.6,
          }, "<")
          .to(".corazon-item", {
            scale: 0,
            duration: 0.6,
          }, "<")
          .to("#hoja-itinerario-izq", {
            x: -30,
            duration: 0.6,
          }, "<")
          .to("#hoja-itinerario-der", {
            x: 30,
            duration: 0.6,
          }, "<")
          .to(".imagen-izq", {
            x: -150,
            scale: 0.7,
            duration: 0.6,
          }, "<")
          .to(".imagen-der", {
            x: 150,
            scale: 0.7,
            duration: 0.6,
          }, "<")
          .to(".texto-izq", {
            x: -100,
            duration: 0.6,
          }, "<")
          .to(".texto-der", {
            x: 100,
            duration: 0.6,
          }, "<");
        },
      });

      console.log("üìÖ‚ù§Ô∏è‚ú®üçÉ ¬°Animaci√≥n con hojas en los bordes activada!");
    });
  }
</script>

<style>
  /* Transiciones suaves para hover */
  .evento-item p {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .evento-item:hover p:first-of-type {
    color: #a88a4d;
    transform: scale(1.08);
    text-shadow: 0 2px 8px rgba(201, 169, 97, 0.3);
  }

  /* Corazones con efecto de brillo elegante */
  .corazon-item {
    filter: drop-shadow(0 4px 12px rgba(201, 169, 97, 0.5));
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .corazon-item:hover {
    transform: scale(1.2) rotate(10deg);
    filter: drop-shadow(0 8px 20px rgba(201, 169, 97, 0.7));
  }

  /* Mejora visual de im√°genes */
  img {
    filter: drop-shadow(0 4px 10px rgba(0, 0, 0, 0.12));
    transition: filter 0.3s ease;
  }

  img:hover {
    filter: drop-shadow(0 6px 16px rgba(0, 0, 0, 0.18));
  }

  /* Animaci√≥n sutil de brillo en la l√≠nea */
  #linea-central {
    box-shadow: 0 0 15px rgba(201, 169, 97, 0.3);
  }

  /* Hojas con transici√≥n suave */
  #hoja-itinerario-izq,
  #hoja-itinerario-der {
    will-change: transform;
  }
</style>